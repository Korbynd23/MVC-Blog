
<div class="editAllPosts">
    <div>
        <h4>{{posted.title}}</h4>
        <p>{{posted.text}}</p>
        <p>{{posted.createdAt}}</p>
        <p>Posted by: {{posted.user.user_name}}</p>
    </div>
</div>


 <section>
  <h2 class="title">Comment</h2><hr>

  <form class="edit-post-form">
    <div>
      <label for="post-title">Title:</label>
      <input class="input" type="text" id="post-title" name="post-title" placeholder="insert blog title here"/>
    </div>
    <div>
      <label for="post-text">Content:</label>
      <input class="textarea is-large" id="post-text" name="post-text" placeholder="insert blog content here"/>
    </div>
  </form>
</section>

<button id="edit-post" class="button is-primary">Submit</button>

