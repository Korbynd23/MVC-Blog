{{#each postMetaData as |post|}}
<div class="editAllPosts">
    <div>
        <a href="/dashboard/{{post.id}}"><h4>{{post.title}}</h4></a>
        <p>{{post.text}}</p>
        <p>{{post.createdAt}}</p>
        <p>Posted by: {{post.user.user_name}}</p>
    </div>
</div>
{{/each}}

<a href="/api/new">Create a New Post</a>
